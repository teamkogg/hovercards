{
  "name": "hovercards",
  "description": "Get more content. Open fewer tabs.",
  "homepage": "http://hovercards.com",
  "bugs": {
    "url": "https://github.com/kogg/hovercards/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kogg/hovercards.git"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:extension": "NODE_ENV=production webpack -p --config webpack.config.extension.js && run-s build:extension:*",
    "build:extension:background": "NODE_ENV=production ENTRY=background webpack -p --config webpack.config.extension.js",
    "build:extension:options": "NODE_ENV=production ENTRY=options webpack -p --config webpack.config.extension.js",
    "build:extension:top-frame": "NODE_ENV=production ENTRY=top-frame webpack -p --config webpack.config.extension.js",
    "build:www": "NODE_ENV=production webpack -p --config webpack.config.www.js",
    "check": "run-s check:*",
    "check:css": "stylelint \"**/*.css\" --color --ignore-path .gitignore",
    "check:js": "eslint . --color --ignore-path .gitignore --ignore-pattern 'integrations/**' --ignore-pattern 'old-stuff/**'",
    "clean": "rm -rf coverage dist dist-* dump.rdb npm-debug.log*",
    "coverage:check": "istanbul check-coverage --statements 75 --branches 75 --functions 75 --lines 75",
    "coverage:report": "cat ./coverage/lcov.info | codecov",
    "deploy": "run-s deploy:*",
    "deploy:extension": "webstore upload --source dist --extension-id dighmiipfpfdfbfmpodcmfdgkkcakbco --auto-publish --client-id $CHROME_CLIENT_ID --client-secret $CHROME_CLIENT_SECRET --refresh-token $CHROME_REFRESH_TOKEN",
    "deploy:www": "git config --global user.email \"teamkogg@gmail.com\" && git config --global user.name \"Kogg\" && gh-pages -d dist-www",
    "fix": "run-s fix:*",
    "fix:css": "( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \"\\.css$\" | xargs stylefmt --config .stylelintrc ) && ( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \"\\.css$\" | xargs git add )",
    "fix:js": "( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \"\\.js$\" | xargs eslint --fix --color ) && ( git diff --staged --name-only --diff-filter=ACMRTUXB | grep \"\\.js$\" | xargs git add )",
    "release": "semantic-release pre && npm run build && npm run deploy && semantic-release post",
    "start": "if [ \"$NODE_ENV\" = 'production' ]; then foreman start; else foreman start -f Procfile.dev; fi",
    "test": "run-s test:*",
    "test:unit": "istanbul cover -x *.test.js _mocha -- -R spec \"./{,!(node_modules)/**/}*.test.js\"",
    "test:unit:no-cover": "mocha \"./{,!(node_modules)/**/}*.test.js\" --color -R nyan"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run fix",
      "commit-msg": "validate-commit-msg",
      "pre-push": "npm run check && npm run test:unit:no-cover"
    },
    "validate-commit-msg": {
      "helpMessage": "Install commitizen and use `git cz` instead of `git commit` https://github.com/commitizen/cz-cli#installing-the-command-line-tool"
    }
  },
  "dependencies": {
    "async": "^2.0.1",
    "autolinker": "^0.27.0",
    "cheerio": "^0.20.0",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "connect-redis": "^3.0.2",
    "es6-promisify": "^4.1.0",
    "express-session": "^1.11.3",
    "feathers": "^2.0.1",
    "feathers-errors": "^2.4.0",
    "flux-standard-action": "^0.6.1",
    "googleapis": "^12.2.0",
    "helmet": "^2.1.2",
    "instagram-node": "^0.5.8",
    "jquery": "^3.1.0",
    "open-graph-scraper": "saiichihashimoto/openGraphScraper",
    "passport": "^0.3.2",
    "passport-twitter": "^1.0.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "redis": "^2.4.2",
    "redux": "^3.5.2",
    "redux-actions": "^0.11.0",
    "redux-thunk": "^2.1.0",
    "request": "^2.74.0",
    "reselect": "^2.5.3",
    "rollbar": "^0.6.2",
    "rollbar-browser": "^1.9.1",
    "snoocore": "^3.2.0",
    "twit": "^2.1.1",
    "underscore": "^1.8.3",
    "universal-analytics": "^0.4.2",
    "urijs": "^1.17.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.13.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-computed-properties": "^6.8.0",
    "babel-preset-react": "^6.11.1",
    "bell-on-bundler-error-plugin": "^1.0.8",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.3.0",
    "chrome-webstore-upload-cli": "^1.0.3",
    "clean-webpack-plugin": "^0.1.10",
    "codecov.io": "^0.1.6",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.23.1",
    "cz-conventional-changelog": "^1.1.7",
    "deep-diff": "^0.3.4",
    "eslint": "^3.3.0",
    "eslint-config-xo": "^0.15.3",
    "eslint-plugin-react": "^6.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.6",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.11.0",
    "ghooks": "^1.3.2",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.22.0",
    "html-webpack-template": "^5.0.0",
    "image-webpack-loader": "^2.0.0",
    "istanbul": "^0.4.4",
    "json-loader": "^0.5.4",
    "last-release-github": "^1.1.1",
    "mocha": "^3.0.2",
    "nock": "^8.0.0",
    "node-fetch": "^1.6.0",
    "nodemon": "^1.10.0",
    "npm-run-all": "^2.3.0",
    "postcss-increase-specificity": "^0.2.2",
    "postcss-loader": "^0.9.1",
    "postcss-nested": "^1.0.0",
    "postcss-raw": "^0.1.2",
    "postcss-safe-important": "^1.0.4",
    "semantic-release": "^4.3.5",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0",
    "string-replace-webpack-plugin": "0.0.3",
    "style-loader": "^0.13.1",
    "stylefmt": "^4.2.3",
    "stylelint": "^7.1.0",
    "stylelint-config-standard": "^12.0.0",
    "url-loader": "^0.5.7",
    "validate-commit-msg": "^2.6.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-dotenv-plugin": "^1.3.2",
    "write-file-webpack-plugin": "^3.1.8"
  },
  "engines": {
    "node": "^6.1.0",
    "npm": "^3.9.0"
  },
  "release": {
    "getLastRelease": "last-release-github"
  }
}
